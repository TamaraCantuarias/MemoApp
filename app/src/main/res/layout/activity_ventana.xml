<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle">

        <!-- Título de la galería -->
        <TextView
            android:id="@+id/tituloGaleria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Galería"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"/>

        <!-- Contenido de la galería -->
        <LinearLayout
            android:id="@+id/recuerdo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imagenOso"
                android:layout_width="90dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:contentDescription="Imagen de oso"
                android:scaleType="centerCrop"
                android:src="@drawable/oso" />

            <TextView
                android:id="@+id/textViewLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="Lugar: parque "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Descripción: un lindo gato cafe "
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnModificarOso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Modificar" />

                <Button
                    android:id="@+id/btnEliminarOso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recuerdo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imagenGato"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="Imagen de gato"
                android:scaleType="centerCrop"
                android:src="@drawable/gato"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewLugar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar: casa "
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewDescripcion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción: un lindo gato pequeño "
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnModificarGato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modificar"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEliminarGato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar" />
            </LinearLayout>
        </LinearLayout>

        <!-- Opciones -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickpuntuacion"
            android:text="Puntuación de la aplicación"
            android:layout_marginBottom="4dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickmultimedia"
            android:text="Ver videos"
            android:layout_marginBottom="4dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:onClick="onClickmapa"
            android:text="Tus últimos lugares visitados" />
    </LinearLayout>
</ScrollView>
